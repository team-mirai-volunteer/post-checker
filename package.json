{
  "name": "post-checker-proto",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "setup:dify": "git clone --depth 1 https://github.com/langgenius/dify.git dify-local && cp dify-local/docker/.env.example dify-local/docker/.env",
    "start": "cd dify-local/docker && DSL_EXPORT_ENCRYPT_DATASET_ID=false docker compose up -d && cd ../.. && npm run dify:setup && echo '\nâœ… Dify started: http://localhost/apps\n'",
    "stop": "cd dify-local/docker && docker compose down",
    "restart": "npm run stop && npm run start",
    "logs": "cd dify-local/docker && docker compose logs -f",
    "dify:setup": "tsx scripts/dify-cli.ts setup",
    "dify:sync": "tsx scripts/dify-cli.ts sync",
    "dify:export": "tsx scripts/dify-cli.ts export",
    "dify:import": "tsx scripts/dify-cli.ts import",
    "dify:logout": "tsx scripts/dify-cli.ts logout",
    "fetch:note-articles": "tsx scripts/fetch-note-articles.ts",
    "fetch:manifesto": "tsx scripts/fetch-manifesto.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "INTEGRATION_TEST=true vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "format": "biome check --write . && prettier --write 'dify-settings/**/*.yml'",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "knip": "knip",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "@types/turndown": "^5.0.6",
    "dotenv": "^17.2.3",
    "knip": "^5.82.1",
    "prettier": "^3.8.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "playwright": "^1.57.0",
    "turndown": "^7.2.2",
    "yaml": "^2.8.2"
  }
}
