# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "asia-northeast1"
environment = "dev"

# Cloud SQL Configuration (minimal for small-scale)
db_tier = "db-f1-micro"
db_name = "dify"
db_user = "dify"

# Redis Configuration (minimal for small-scale)
redis_memory_size_gb = 1
redis_tier           = "BASIC"

# Cloud Run Configuration (minimal for small-scale)
cloud_run_min_instances = 0
cloud_run_max_instances = 2
cloud_run_cpu           = "1"
cloud_run_memory        = "512Mi"

# Dify Configuration
dify_version = "0.15.3"

# Secrets (use environment variables or terraform.tfvars for these)
# secret_key    = "your-secret-key-here"
# init_password = "your-initial-admin-password"
